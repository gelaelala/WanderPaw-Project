<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPetInformation"
    android:background="@color/dirty_white">

    <RelativeLayout
        android:id="@+id/HeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/InputFields">

        <ImageView
            android:onClick="onBackButtonClicked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back"
            app:tint="@color/dark_brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter"
            android:text="Add Pet Information"
            android:textColor="@color/dark_brown"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/InputFields"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/HeaderTitle"
        app:layout_constraintBottom_toTopOf="@id/SaveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="22dp"
                android:layout_margin="22dp">

                <ImageView
                    android:id="@+id/imageHolder"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <!--                    android:src="@drawable/sample_photo_for_pet_cards_in_user_profile" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/petnameInput"
                style="@style/LoginTextInputOuterFieldStyle"
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:textColorHint="@color/light_brown"
                app:boxStrokeColor="@color/light_brown"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/light_brown"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/petName"
                    style="@style/LoginTextInputInnerFieldStyle"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field_add_pet"
                    android:fontFamily="@font/inter"
                    android:hint="Enter Name Here"
                    android:inputType="text"
                    android:textColor="@color/light_brown"
                    android:textSize="12sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/dark_brown"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter" />

                <Space
                    android:layout_width="130dp"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/dark_brown"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/petageInput"
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:textColorHint="@color/light_brown"
                    app:boxStrokeColor="@color/light_brown"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:hintTextColor="@color/light_brown"
                    android:layout_marginTop="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petAge"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_field_add_pet"
                        android:fontFamily="@font/inter"
                        android:hint="Enter Age Here"
                        android:inputType="textAutoCorrect"
                        android:textColor="@color/light_brown"
                        android:textSize="12sp"
                        android:typeface="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <Space
                    android:layout_width="25dp"
                    android:layout_height="0dp" />

                <Spinner
                    android:id="@+id/genderInputField"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_border"
                    android:entries="@array/gender_options"
                    android:paddingLeft="5dp" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/petlocationInput"
                style="@style/LoginTextInputOuterFieldStyle"
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:textColorHint="@color/light_brown"
                app:boxStrokeColor="@color/light_brown"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/light_brown"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/petLocation"
                    style="@style/LoginTextInputInnerFieldStyle"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field_add_pet"
                    android:fontFamily="@font/inter"
                    android:hint="Enter Location Here"
                    android:inputType="text"
                    android:textColor="@color/light_brown"
                    android:textSize="12sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/petBioInput"
                style="@style/LoginTextInputOuterFieldStyle"
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:textColorHint="@color/light_brown"
                app:boxStrokeColor="@color/light_brown"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/light_brown"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/petBio"
                    style="@style/LoginTextInputInnerFieldStyle"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field_add_pet"
                    android:fontFamily="@font/inter"
                    android:hint="Say something about your pet!"
                    android:inputType="text"
                    android:textColor="@color/light_brown"
                    android:textSize="12sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aboutpetInput"
                style="@style/LoginTextInputOuterFieldStyle"
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:textColorHint="@color/light_brown"
                app:boxStrokeColor="@color/light_brown"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/light_brown"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/aboutPet"
                    style="@style/LoginTextInputInnerFieldStyle"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field_add_pet"
                    android:fontFamily="@font/inter"
                    android:hint="Tell us more about your pet!"
                    android:inputType="text"
                    android:textColor="@color/light_brown"
                    android:textSize="12sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/petbreedInput"
                style="@style/LoginTextInputOuterFieldStyle"
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:textColorHint="@color/light_brown"
                app:boxStrokeColor="@color/light_brown"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/light_brown"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/petBreed"
                    style="@style/LoginTextInputInnerFieldStyle"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field_add_pet"
                    android:fontFamily="@font/inter"
                    android:hint="Enter Pet Breed Here"
                    android:inputType="text"
                    android:textColor="@color/light_brown"
                    android:textSize="12sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Conditions"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/petmedicalconditionsInput"
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:textColorHint="@color/light_brown"
                    app:boxStrokeColor="@color/light_brown"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:hintTextColor="@color/light_brown"
                    android:layout_marginTop="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petMedicalConditions"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_field_add_pet"
                        android:fontFamily="@font/inter"
                        android:hint="Enter Here"
                        android:inputType="text"
                        android:textColor="@color/light_brown"
                        android:textSize="12sp"
                        android:typeface="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_toRightOf="@id/petmedicalconditionsInput"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-3dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/light_brown"
                    app:icon="@drawable/add_pet_profile_prompt"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@null"/>

            </RelativeLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaccine/s Taken"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/petvaccinestakenInput"
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:textColorHint="@color/light_brown"
                    app:boxStrokeColor="@color/light_brown"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:hintTextColor="@color/light_brown"
                    android:layout_marginTop="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petVaccinesTaken"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_field_add_pet"
                        android:fontFamily="@font/inter"
                        android:hint="Enter Here"
                        android:inputType="text"
                        android:textColor="@color/light_brown"
                        android:textSize="12sp"
                        android:typeface="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_toRightOf="@id/petvaccinestakenInput"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-3dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/light_brown"
                    app:icon="@drawable/add_pet_profile_prompt"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@null"/>

            </RelativeLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="2dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pet's Diet"
                    android:textColor="@color/dark_brown"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(optional)"
                    android:textColor="@color/dark_brown"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="2.5dp"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/petdietInput"
                style="@style/LoginTextInputOuterFieldStyle"
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:textColorHint="@color/light_brown"
                app:boxStrokeColor="@color/light_brown"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/light_brown"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/petDiet"
                    style="@style/LoginTextInputInnerFieldStyle"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field_add_pet"
                    android:fontFamily="@font/inter"
                    android:hint="Tell Us About Their Diet"
                    android:inputType="text"
                    android:textColor="@color/light_brown"
                    android:textSize="12sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason for Adoption"
                android:textColor="@color/dark_brown"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/inter"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/petreasonforadoptionInput"
                style="@style/LoginTextInputOuterFieldStyle"
                android:layout_width="319dp"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:textColorHint="@color/light_brown"
                app:boxStrokeColor="@color/light_brown"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:hintTextColor="@color/light_brown"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="22dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/petReasonforAdoption"
                    style="@style/LoginTextInputInnerFieldStyle"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field_add_pet"
                    android:fontFamily="@font/inter"
                    android:hint="Enter Here"
                    android:inputType="text"
                    android:textColor="@color/light_brown"
                    android:textSize="12sp"
                    android:typeface="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="2dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Needs"
                    android:textColor="@color/dark_brown"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(optional)"
                    android:textColor="@color/dark_brown"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="2.5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/petotherneedsInput"
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:cursorVisible="true"
                    android:gravity="center"
                    android:textColorHint="@color/light_brown"
                    app:boxStrokeColor="@color/light_brown"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:hintTextColor="@color/light_brown"
                    android:layout_marginTop="1dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/petOtherNeeds"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:background="@drawable/input_field_add_pet"
                        android:fontFamily="@font/inter"
                        android:hint="Enter Here"
                        android:inputType="text"
                        android:textColor="@color/light_brown"
                        android:textSize="12sp"
                        android:typeface="normal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_toRightOf="@id/petotherneedsInput"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-3dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/light_brown"
                    app:icon="@drawable/add_pet_profile_prompt"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@null"/>

            </RelativeLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="2dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Requirements for Adopter"
                    android:textColor="@color/dark_brown"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(optional)"
                    android:textColor="@color/dark_brown"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="2.5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
